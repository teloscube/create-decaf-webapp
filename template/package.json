{
  "name": "decaf-webapp-template",
  "version": "0.0.0",
  "private": true,
  "author": "--username-- <--usermail-->",
  "type": "module",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "dev": "vite",
    "start": "vite preview",
    "build": "npm run codegen && tsc && vite build",
    "test": "vitest",
    "lint": "eslint --ext .ts,.tsx src",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "prepare": "husky",
    "codegen": "graphql-codegen --config codegen.ts",
    "zeus": "zeus https://${DECAF_WEBAPP_HOST}/apis/microlot/v1/graphql ./src/autogen --typescript --typedDocumentNode --header=\"'Authorization:${DECAF_AUTH_HEADER}'\""
  },
  "dependencies": {
    "@ant-design/icons": "^6.1.0",
    "@decafhub/decaf-client": "^0.8.0",
    "@decafhub/decaf-react": "^0.8.0",
    "@decafhub/decaf-react-webapp": "^0.5.0",
    "antd": "^6.1.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-number-format": "^5.4.4",
    "react-router-dom": "^7.11.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/compat": "^2.0.0",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@graphql-codegen/cli": "6.1.0",
    "@graphql-codegen/typescript": "^5.0.7",
    "@graphql-codegen/typescript-resolvers": "^5.1.5",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "globals": "^16.5.0",
    "graphql-zeus": "^7.1.9",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-organize-imports": "^4.3.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-checker": "^0.12.0",
    "vitest": "^4.0.16"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 120,
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "./node_modules/.bin/prettier --write",
      "./node_modules/.bin/eslint"
    ]
  }
}
